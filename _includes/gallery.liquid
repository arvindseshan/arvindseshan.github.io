{%- comment -%}
Pretty CSS-grid photo gallery (no JS)
- Reads images from assets/img/gallery/**/*
- Skips .webp if you want (remove the "unless" to include them)
- Caption is derived from filename: "grand-canyon.jpg" -> "grand canyon"
{%- endcomment -%}

<div class="pretty-gallery">
  {%- for image in site.static_files -%}
    {%- if image.path contains 'assets/img/gallery' -%}
      {%- unless image.path contains '.webp' -%}
        {%- assign base = image.name | split:'.' | first -%}
        {%- assign caption = base | replace:'-',' ' | replace:'_',' ' -%}

        <a class="pg-item venobox"
           data-gall="travel"
           data-title="{{ caption | escape }}"
           href="{{ image.path | relative_url }}">
          <img
            class="pg-img"
            src="{{ image.path | relative_url }}"
            alt="{{ caption | escape }}"
            loading="lazy"
            decoding="async"
            sizes="(min-width: 1200px) 22vw, (min-width: 768px) 30vw, 90vw"
          />
          {%- comment -%}
          <span class="pg-caption">{{ caption }}</span>
          {%- endcomment -%}
        </a>

      {%- endunless -%}
    {%- endif -%}
  {%- endfor -%}
</div>
